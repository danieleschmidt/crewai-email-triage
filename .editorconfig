# EditorConfig configuration - see https://EditorConfig.org
root = true

# Universal settings for consistency across editors
[*]
charset = utf-8              # UTF-8 encoding standard
end_of_line = lf            # Unix line endings
insert_final_newline = true # File should end with newline
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 88        # Python Black standard

# Language-specific overrides
[*.py]
indent_size = 4             # PEP 8 standard for Python

[*.md]
trim_trailing_whitespace = false  # Preserves markdown formatting